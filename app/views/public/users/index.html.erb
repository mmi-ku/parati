<table class="table">
  <thead>
    <tr>
      <th>Profile image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50, 50), size: '50x50' %></td>
        <td><%= user.name %></td>
        <td> Following : <%= user.followings.count %></td>
        <td> Followers: <%= user.followers.count %></td>
        <td><%= render "relationships/btn", user: user, options: { class: "follow-link" } %></td>
        <td><%= link_to "Show", user %></td>
      </tr>
    <% end %>
  </tbody>
</table>