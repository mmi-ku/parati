<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "Unfollow", user_relationships_path(user), method: :delete, class: options[:class].presence || "btn btn-info" %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user), method: :post, class: options[:class].presence || "btn btn-success" %>
  <% end %>
<% end %>