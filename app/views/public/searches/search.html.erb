<h2>Results index</h2>

<table class="table table-hover table-inverse">

  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>

  <% elsif @range == "Post" %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>

  <% elsif @range == "Genre" %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= link_to post_path(post) do %>
                <%= image_tag post.get_image %>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% end %>

</table>

