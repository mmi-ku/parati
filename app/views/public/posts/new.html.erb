<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 mx-auto">
           <% if @post.errors.any? %>
              <h4><%= @post.errors.count %>errors prohibited this obj from being saved:</h4>
              <ul>
                <% @post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>     
      <h1 class="text-center">New Post</h1>
        <%= form_with model: @post do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>Picture</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label :genre %></th>
            <td><%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "---"} %></td>
          </tr>
          <tr>
            <th>Title</th>
            <td><%= f.text_field :title %></td>
          </tr>
          <tr>
            <th>Caption</th>
            <td><%= f.text_area :body %></td>
          </tr>
          <tr>
            <td colspan="3" class="text-center">
              <%= f.submit 'Share', class: "btn btn-primary btn-block my-2" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>

