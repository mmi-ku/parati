<!DOCTYPE html>
<html>
  <head>
    <title>Parati</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
      <% if user_signed_in? %>
        <li>
            <div class="search_form">
              <%= form_with url: search_path, local: true, method: :get do |f| %>
                <%= f.collection_select :word, Genre.all, :name, :name, { prompt: "ジャンルを選択してください" }, { class: "form-control" } %>
                <%= f.hidden_field :range, value: 'Genre' %>
                <%= f.hidden_field :search, value: "partial_match" %>
                <%= f.submit "Search", class: "btn btn-primary" %>
              <% end %>
            </div>
            
             <div class="search_form">
              <%= form_with url: search_path, local: true, method: :get do |f| %>
                <%= f.text_field :word %>
                <%= f.select :range, options_for_select([['User'], ['Post']]) %>
                <%= f.hidden_field :search, value: "partial_match" %>
                <%= f.submit "Search", class: "btn btn-primary" %>
              <% end %>
            </div>

        <li>
          <%= link_to 'Post', new_post_path %>
        </li>

        <li>
          <%= link_to 'Home', posts_path%>
        </li>

        <li>
          <%= link_to 'My Page', user_path(current_user.id) %>
        </li>
        <li>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>

      <% else %>
        <li>
          <%= link_to "Sign up", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Log in", new_user_session_path %>
        </li>
      <% end %>
    </header>

  <%= yield %>
  </body>


</html>
