<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="text-center">Users List</h3>
      <ul class="list-group mb-4"> 
        <% @users.each do |user| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong><%= user.name %></strong> - <%= user.email %>
            </div>
            <%= link_to 'Delete', admin_user_path(user), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete?' } %>
          </li>
        <% end %>
      </ul>
      <div class="text-center">
        <%= link_to "Back", admin_genres_path, class: "btn btn-primary btn-block" %> 
      </div>
    </div>
  </div>
</div>