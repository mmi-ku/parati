<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="text-center">Add New Genre</h3>

      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "Genre name", class: "mr-3" %>
          <%= f.text_field :name, class: "form-control mr-5" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit 'Add New Genre', class: "btn btn-primary" %>
        </div>
      <% end %>

      <h3 class="text-center mt-5">Genre Index</h3>
      <ul class="list-group mt-4">
        <% @genres.each do |genre| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= genre.name %></span>
            <div class="ml-auto">
              <%= link_to "Edit", edit_admin_genre_path(genre.id), class: "btn btn-success mr-2" %>
              <%= link_to "Delete", admin_genre_path(genre), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete?' } %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>